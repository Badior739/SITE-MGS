# Backend .env for local development
NODE_ENV=development
PORT=3001
APP_NAME=Mind Graphix Premium
LOG_LEVEL=debug

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mindgraphix_dev
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=mindgraphix_dev

# ============================================================================
# REDIS CACHE
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ============================================================================
# JWT & SECURITY
# ============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_EXPIRATION=900
JWT_REFRESH_EXPIRATION=604800

# ============================================================================
# CORS & DOMAINS
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
SITE_URL=http://localhost:3000

# ============================================================================
# INTEGRATIONS (Placeholders - configure as needed)
# ============================================================================
# Stripe
STRIPE_API_KEY=sk_test_xxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxx

# HubSpot
HUBSPOT_API_KEY=pat-xxxxx
HUBSPOT_PORTAL_ID=xxxxx

# Mailchimp
MAILCHIMP_API_KEY=xxxxx-us1
MAILCHIMP_AUDIENCE_ID=xxxxx

# Google Analytics
GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# AWS S3
AWS_ACCESS_KEY_ID=xxxxx
AWS_SECRET_ACCESS_KEY=xxxxx
AWS_S3_REGION=eu-west-1
AWS_S3_BUCKET=mindgraphix-media

# Cloudflare
CLOUDFLARE_API_KEY=xxxxx
CLOUDFLARE_ZONE_ID=xxxxx

# ============================================================================
# EMAIL (Optional - for notifications)
# ============================================================================
SENDGRID_API_KEY=
SENDGRID_FROM_EMAIL=noreply@mindgraphix.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@mindgraphix.com

# ============================================================================
# ADMIN USER (Pre-configured in seed)
# ============================================================================
# Email: admin@mindgraphix.com
# Password: Admin@12345
# Role: SUPER_ADMIN
# Payment
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# AI
OPENAI_API_KEY=

# Storage
AWS_REGION=us-east-1
AWS_S3_BUCKET=mindgraphix-media

# Site Config
SITE_NAME=Mind Graphix Premium
SITE_URL=http://localhost:3000
SUPPORTED_LANGUAGES=en,fr
DEFAULT_LANGUAGE=en
