# ============================================================================
# FRONTEND ENVIRONMENT VARIABLES
# ============================================================================
# Utilisation: NEXT_PUBLIC_* = accessible au client (navigateur)
#              Variables sans prefix = utilisées côté serveur uniquement

# ============================================================================
# API BACKEND
# ============================================================================
# URL du serveur API backend
# Développement: http://localhost:3001
# Production: https://api.mindgraphix.com
NEXT_PUBLIC_API_URL=http://localhost:3001

# ============================================================================
# APPLICATION
# ============================================================================
NEXT_PUBLIC_APP_NAME=Mind Graphix Premium
NEXT_PUBLIC_SITE_URL=http://localhost:3000
NEXT_PUBLIC_DOMAIN=mindgraphix.com

# ============================================================================
# ANALYTICS & TRACKING
# ============================================================================
NEXT_PUBLIC_ANALYTICS_ID=G-XXXXXXXXXX
NEXT_PUBLIC_ENABLE_ANALYTICS=true

# ============================================================================
# SERVICES EXTERNES (Optionnels)
# ============================================================================

# Stripe - Paiements en ligne
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_xxxxx

# Google - SSO et Analytics
NEXT_PUBLIC_GOOGLE_CLIENT_ID=xxxxx

# Facebook - Partage social
NEXT_PUBLIC_FACEBOOK_APP_ID=xxxxx

# ============================================================================
# FEATURES (Activation/Désactivation)
# ============================================================================
NEXT_PUBLIC_ENABLE_COMMENTS=false
NEXT_PUBLIC_ENABLE_SEARCH=true
NEXT_PUBLIC_ENABLE_NEWSLETTER=false

# ============================================================================
# INTERNATIONALIZATION (i18n)
# ============================================================================
NEXT_PUBLIC_DEFAULT_LANGUAGE=fr
NEXT_PUBLIC_SUPPORTED_LANGUAGES=fr,en

# ============================================================================
# DÉVELOPPEMENT
# ============================================================================
# Mode debug pour les logs de développement
NEXT_PUBLIC_DEBUG_MODE=false

# Afficher les requêtes API détaillées
NEXT_PUBLIC_API_DEBUG=false
